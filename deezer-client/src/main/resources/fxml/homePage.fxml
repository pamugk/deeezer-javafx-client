<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.*?>
<?import java.lang.String?>
<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="controllers.HomePageController">
    <Label fx:id="alert" alignment="CENTER" text="%notLoggedInAlert" textAlignment="CENTER" wrapText="true">
        <styleClass>
            <String fx:value="deezer-title" />
            <String fx:value="deezer-alert" />
        </styleClass>
    </Label>
    <VBox fx:id="recommendationsBox" visible="false">
        <VBox.margin>
            <Insets bottom="80.0" left="80.0" right="80.0" top="57.0" />
        </VBox.margin>
        <Label styleClass="deezer-subtitle" text="%recommendedPlaylists" />
        <FlowPane fx:id="recommendedPlaylistsFP" columnHalignment="CENTER" hgap="35.0" rowValignment="TOP" vgap="30.0">
            <VBox.margin>
                <Insets top="30.0" />
            </VBox.margin>
        </FlowPane>
        <Label styleClass="deezer-subtitle" text="%recommendedArtists">
            <VBox.margin>
                <Insets top="60.0" />
            </VBox.margin>
        </Label>
        <FlowPane fx:id="recommendedArtistsFP" columnHalignment="CENTER" hgap="35.0" rowValignment="TOP" vgap="30.0">
            <VBox.margin>
                <Insets top="30.0" />
            </VBox.margin>
        </FlowPane>
        <Label styleClass="deezer-subtitle" text="%recommendedAlbums">
            <VBox.margin>
                <Insets top="60.0" />
            </VBox.margin>
        </Label>
        <FlowPane fx:id="recommendedAlbumsFP" columnHalignment="CENTER" hgap="35.0" rowValignment="TOP" vgap="30.0">
            <VBox.margin>
                <Insets top="30.0" />
            </VBox.margin>
        </FlowPane>
    </VBox>
</VBox>
