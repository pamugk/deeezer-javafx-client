<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>

<fx:root styleClass="usercard" type="javafx.scene.layout.VBox" xmlns:fx="http://javafx.com/fxml">
    <Button fx:id="userRedirectButton" styleClass="usercard-user" onAction="#onUserRedirection">
        <graphic>
            <ImageView fx:id="image"/>
        </graphic>
    </Button>
    <Label fx:id="name" styleClass="usercard-name" wrapText="true"/>
</fx:root>
