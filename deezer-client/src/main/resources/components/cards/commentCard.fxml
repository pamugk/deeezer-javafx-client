<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<fx:root type="javafx.scene.layout.HBox" xmlns:fx="http://javafx.com/fxml/1">
   <padding>
      <Insets left="24.0" right="24.0" />
   </padding>
    <Button fx:id="userRedirectButton" styleClass="deezer-button" onAction="#onUserRedirection">
        <graphic>
            <ImageView fx:id="commentorImg" fitHeight="30.0" fitWidth="30.0" />
        </graphic>
    </Button>
    <VBox spacing="10.0" styleClass="comment-card">
      <padding>
         <Insets bottom="12.0" top="12.0" />
      </padding>
        <Label fx:id="commentCreationInfo" styleClass="deezer-secondary" wrapText="true"/>
        <Label fx:id="commentText" styleClass="deezer-secondary" wrapText="true"/>
    </VBox>
</fx:root>
